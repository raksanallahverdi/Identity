@using Identity.ViewModels.Account;
@model AccountLoginVM;
@{

    Layout = "_Layout";

    string returnUrl = Context.Request.Query["returnUrl"];
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Login</h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
      

            <form method="post" asp-action="login" asp-controller="account" class="signin-form">
                <input value="@returnUrl" asp-for="ReturnUrl" type="hidden" />
                <div class="text-danger" asp-validation-summary="All">
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <input id="password-field" asp-for="Password" class="form-control" placeholder="Password">
                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary submit px-3">Login</button>
                </div>

            </form>
            <p class="w-100 text-center">&mdash; Don't Have Account? &mdash;</p>
            <div class="social d-flex text-center">
                <a href="#" class="px-1 py-1 rounded">Register</a>
            </div>
        </div>
    </div>
</div>



