@using Identity.Areas.Admin.Models.User;
@model UserIndexVM;
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"> Users</h1>
    <a class="btn btn-primary" asp-action="create" asp-controller="user">Create</a>
</div>

<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
            {
            <tr>
          
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Country</td>
                <td>@user.City</td>
                <td>@foreach(var role in user.Roles)
                    {
                        <p>@role</p>
                    }


                </td>
                <td class="text-center d-flex justify-content-center">
                    <a class="btn btn-secondary mx-2" asp-route-id="@user.Id" asp-controller="user" asp-action="Detail"></a>
                    <a class="btn btn-secondary mx-2"  asp-controller="user">✏️</a>
                    <form method="post" asp-route-id="@user.Id" asp-action="delete" asp-controller="user">
                        <button type="submit" class="btn btn-danger">X</button>
                    </form>
                </td>
            
            </tr>
            }
    </tbody>
</table>